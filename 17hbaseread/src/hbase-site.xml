<configuration>
  <property>
    <name>hbase.zookeeper.quorum</name>
    <value>localhost:2181</value>
  </property>
  <property>
    <name>hbase.client.retries.number</name>
    <value>2</value>
    <description>must be greater than 0, otherwise it will throw error of "cannot find region". but try to keep it as small as possible because the framework needs quick test when establishing connection.</description>
  </property>
  <property>
    <name>hbase.client.pause</name>
    <value>1</value>
  </property>
</configuration>