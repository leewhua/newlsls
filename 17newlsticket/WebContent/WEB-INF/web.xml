<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>17newlsticket</display-name>
  	<servlet>
	    <servlet-name>writeticketservlet</servlet-name>
	    <servlet-class>com.lsid.ticket.servlet.WriteTicketServlet</servlet-class>
  	</servlet>
    <servlet-mapping>
	    <servlet-name>writeticketservlet</servlet-name>
	    <url-pattern>/*</url-pattern>
  	</servlet-mapping>  
  <filter>
    <filter-name>autoconfigfilter</filter-name>
    <filter-class>
	 	com.lsid.autoconfig.client.AutoConfig
	</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>autoconfigfilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  	<filter>
		<filter-name>readticketfilter</filter-name>
		<filter-class>
			com.lsid.ticket.filter.ReadTicketFilter
		</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>readticketfilter</filter-name>
		<url-pattern>/r/*</url-pattern>
	</filter-mapping>
	<listener>
	  <listener-class>
	 	 com.lsid.ticket.listener.TicketExpire
	  </listener-class>
	</listener>
</web-app>